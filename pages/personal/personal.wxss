/* pages/personal/personal.wxss */
.top_userInfo{
  width: 100%;
  height: 300rpx;
  display: flex;
  padding: 50rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg,#fccf31,#f55555);
}

.margin{
  margin: 20rpx 0 !important;
  border: 0 !important;
}
.top_userInfo image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 1px solid #ddd;
}
.userName{
  margin-left: 20rpx;
  position: relative;
  top: 10rpx;
  color: #fff;
}
.FeatureList > view image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.FeatureList > view{
  height: 70rpx;
  background-color: #fff;
padding: 15rpx 20rpx;
display: flex;
border-bottom: 1px solid #ddd;
align-items: center;
}
.viewLIText{
  flex: 1;
}