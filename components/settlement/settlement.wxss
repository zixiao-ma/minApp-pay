/* components/settlement/settlement.wxss */
.m-settlement{
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: column;
}
.cart_top button{
  margin: 0;
  line-height: 20rpx;
  background-color: red;
  color: #fff;
}
.cart_top text{
  flex: 1;
}
.cart_top{
  border-top: 1px solid #ddd;
  padding:10px;
  height: 50rpx;
  background-color: #fafafa;
  display: flex;
  justify-content: space-between;
}
.cart_btm{
  display:flex;
  flex: 1;
}
.cart_btm >view{
  width: 50%;
  display:flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  cursor: pointer;
}
.cart_btm_btn1{
  background-color: orange;
}
.cart_btm_btn2{
  background-color: rgb(0, 201, 0);
}
